{
  "name": "Azure Authorization Header Extractor",
  "description": "Extracts Azure authorization header from requests",
  "version": "1.3",
  "permissions": [
    "tabs", "clipboardWrite", "storage" ,"webRequest", "https://*.portal.azure.com/*", "https://management.azure.com/*"
  ],
  "browser_action": {
      "default_title": "Show header",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
    "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
